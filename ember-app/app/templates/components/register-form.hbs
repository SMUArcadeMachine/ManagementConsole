{{#bs-form formLayout="horizontal"}}
    <div class="form-group">
        <label class="control-label col-md-4">Username</label>
        <div class="col-md-8">
            {{input placeholder="Email" value=changeset.username classNames="form-control"}}
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-4">Re-enter username</label>
        <div class="col-md-8">
            {{input placeholder="Re-enter email" value=changeset.username2 classNames="form-control"}}
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-4">Password</label>
        <div class="col-md-8">
            {{input placeholder="Password" type="password" value=changeset.password classNames="form-control"}}
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-4">Re-enter password</label>
        <div class="col-md-8">
            {{input placeholder="Re-enter password" type="password" value=changeset.password2 classNames="form-control"}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-8 col-md-offset-4">
            <button type="submit" class="btn btn-primary" {{action submit changeset}}>Submit</button>
        </div>
    </div>
    {{#if changeset.isInvalid}}
        <p>Registration error:</p>
        <ul>
            {{#each changeset.errors as |error|}}
                <li>{{error.key}}: {{error.validation}}</li>
            {{/each}}
        </ul>
    {{/if}}
{{/bs-form}}