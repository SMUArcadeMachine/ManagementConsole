<div class="sidebar">
    <div class="button-wrapper" data-toggle="modal" data-target="#manageusers">
        <button class="btn btn-block btn-lg btn-primary dashboard-button-large sidebar-button" >
            <i class="fa fa-users" aria-hidden="true"></i>
        </button>
        <span class="popup-text">Manage Users</span>
    </div>
    {{#if is_dashboard}}
        {{#link-to "usage" classNames="no-decoration"}}
            <div class="button-wrapper">
                <button class="btn btn-block btn-lg btn-primary dashboard-button-large sidebar-button" >
                    <i class="fa fa-bar-chart" aria-hidden="true"></i>
                </button>
                <span class="popup-text" style="text-decoration: none">View Usage</span>
            </div>
        {{/link-to}}
    {{else}}
        {{#link-to "dashboard" classNames="no-decoration"}}
            <div class="button-wrapper">
                <button class="btn btn-block btn-lg btn-primary dashboard-button-large sidebar-button" >
                    <i class="fa fa-th-large" aria-hidden="true"></i>
                </button>
                <span class="popup-text" style="text-decoration: none">Dashboard</span>
            </div>
        {{/link-to}}
    {{/if}}
</div>